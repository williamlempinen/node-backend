{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "paths": {
      "*": ["./node_modules/*", "./src/types/*"]
    }
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "exclude": [".templates"]
}
